<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="4dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Battery Monitor"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <!-- Spacer -->
        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content"/>

        <!-- Bluetooth status -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView android:contentDescription="local"
                android:id="@+id/localIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_device_local"/>
        </LinearLayout>

        <!-- Network status -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="16dp">

            <ImageView android:contentDescription="network"
                android:id="@+id/networkIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_device_network"/>
        </LinearLayout>

        <!-- Cloud status -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="16dp">

            <ImageView android:contentDescription="cloud"
                android:id="@+id/cloudIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_device_cloud"/>
        </LinearLayout>

    </LinearLayout>

</merge>